@using ProiectLicenta.Models

@model List<Angajat>

@{
    ViewData["Title"] = "Angajati";
}

<h1 class="  fw-bold pb-2 pb-xl-3 text-center"> Angajati </h1>

<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Angajati" asp-action="Adaugare"> Adauga Angajat</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Angajati" asp-action="Stergere"> Sterge Angajat</a></th>
    </tr>
    </table>

<div>
@if (Model.Count == 0)
{
    <p> Nu exista angajati!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                CodAngajat
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Prenume
                </td>
                <td>
                    @var.Functie
                </td>
                <td>
                    @var.Telefon
                </td>
                <td>
                    @var.Email
                </td>
            </tr>
        }

    </table>
}</div>