@model List<Angajat>
@{
    ViewData["Title"] = "Angajati";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class="fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-person"></i> Angajati </h1>

<div class="mb-3">
    <a class="me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <a class="" asp-controller="Angajati" asp-action="Adaugare"><i class="bi bi-plus-square-fill link-primary h1"></i></a>
    <a class="float-end" asp-controller="Angajati" asp-action="Stergere"><i class="bi bi-trash-fill link-danger h1"></i></a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
    </div>

<div>
    @if (Model.Count == 0)
    {
        <p>Nu exista angajati!</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "CodAngajat" ? "CodAngajat_desc" : "CodAngajat",searchString = filtru })">
                        @if (currentSort != "CodAngajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Nume
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "Nume" ? "Nume_desc" : "Nume",searchString = filtru  })">
                        @if (currentSort != "Nume_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Prenume
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "Prenume" ? "Prenume_desc" : "Prenume",searchString = filtru  })">
                        @if (currentSort != "Prenume_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Functie
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "Functie" ? "Functie_desc" : "Functie",searchString = filtru  })">
                        @if (currentSort != "Functie_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Telefon
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "Telefon" ? "Telefon_desc" : "Telefon",searchString = filtru  })">
                        @if (currentSort != "Telefon_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Email
                    <a href="@Url.Action("Index", new { sortOrder = currentSort == "Email" ? "Email_desc" : "Email",searchString = filtru  })">
                        @if (currentSort != "Email_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
            @foreach (var var in Model)
            {
                <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "Angajati", new { id = var.CodAngajat })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">@var.CodAngajat</td>
                    <td>@var.Nume</td>
                    <td>@var.Prenume</td>
                    <td>@var.Functie</td>
                    <td>@var.Telefon</td>
                    <td>@var.Email</td>
                </tr>
            }
        </table>
    }
</div>
