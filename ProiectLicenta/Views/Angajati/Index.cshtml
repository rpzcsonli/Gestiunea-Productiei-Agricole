@using ProiectLicenta.Models

@model List<Angajat>



<h1> Angajati </h1>

<p>
    <a asp-controller="Angajati" asp-action="Adaugare"> Adauga Angajat</a>
</p>
<p>
    <a asp-controller="Angajati" asp-action="Stergere"> Sterge Angajat</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista angajati!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                CodAngajat
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Prenume
                </td>
                <td>
                    @var.Functie
                </td>
                <td>
                    @var.Telefon
                </td>
                <td>
                    @var.Email
                </td>
            </tr>
        }

    </table>
}