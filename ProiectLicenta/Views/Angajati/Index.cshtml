@using ProiectLicenta.Models
@model List<Angajat>;
@{
    ViewData["Title"] = "Angajati";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}

<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-person"></i> Angajati </h1>

<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Angajati" asp-action="Adaugare"> Adauga Angajat</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Angajati" asp-action="Stergere"> Sterge Angajat</a></th>
    </tr>
    </table>

<div>
@if (Model.Count == 0)
{
    <p> Nu exista angajati!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                
                <th>
                    Cod Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodAngajat" ? "CodAngajat_desc" : "CodAngajat" })">
                        @if (currentSort != "CodAngajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                
                <th>
                    Nume
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Nume" ? "Nume_desc" : "Nume" })">
                        @if (currentSort != "Nume_desc")
                            {
                            <i class="bi bi-sort-up"></i>
                            }
                            else
                            {
                            <i class="bi bi-sort-down"></i>
                            }
                    </a>
                </th>
                <th>
                    Prenume
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Prenume" ? "Prenume_desc" : "Prenume" })">
                        @if (currentSort != "Prenume_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Functie
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Functie" ? "Functie_desc" : "Functie" })">
                        @if (currentSort != "Functie_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Telefon
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Telefon" ? "Telefon_desc" : "Telefon" })">
                        @if (currentSort != "Telefon_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Email
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Email" ? "Email_desc" : "Email" })">
                        @if (currentSort != "Email_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Prenume
                </td>
                <td>
                    @var.Functie
                </td>
                <td>
                    @var.Telefon
                </td>
                <td>
                    @var.Email
                </td>
            </tr>
        }

    </table>
}</div>