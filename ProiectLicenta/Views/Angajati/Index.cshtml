@using ProiectLicenta.Models

@model List<Angajat>

@{
    ViewData["Title"] = "Angajati";
}

<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center"> Angajati </h1>

<table>
    <tr>
        <th> <a class="btn btn-primary" asp-controller="Angajati" asp-action="Adaugare"> Adauga Angajat</a></th>


        <th>    <a class="btn btn-primary" asp-controller="Angajati" asp-action="Stergere"> Sterge Angajat</a></th>
    </tr>
    </table>
    </br>

@if (Model.Count == 0)
{
    <p> Nu exista angajati!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                CodAngajat
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Prenume
                </td>
                <td>
                    @var.Functie
                </td>
                <td>
                    @var.Telefon
                </td>
                <td>
                    @var.Email
                </td>
            </tr>
        }

    </table>
}