@{
    ViewData["Title"] = "Stergere Angajati";
}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center">Sterge Angajati</h1>
<form method="post">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Selectie

            </th>
            <th>
                CodAngajat
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
    @foreach (var evt in ViewBag.events)
        {
            <tr>
                <td><input type="checkbox" name="angajatId" value="@evt.CodAngajat" /></td>
                <td>
                    @evt.CodAngajat
                </td>
                <td>
                    @evt.Nume
                </td>
                <td>
                    @evt.Prenume
                </td>
                <td>
                    @evt.Functie
                </td>
                <td>
                    @evt.Telefon
                </td>
                <td>
                    @evt.Email
                </td>
            </tr>
           
        }
    </table>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


