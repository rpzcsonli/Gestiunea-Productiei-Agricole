@model List<Angajat>
@{
    ViewData["Title"] = "Stergere Angajati";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-trash3"></i> Sterge Angajati</h1>
<a class="btn btn-warning me-3" href="@Url.Action("Index", "Angajati")"><i class="bi bi-arrow-left"></i> Inapoi</a>
<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>

<form method="post">
    <div class="mt-3">
        @if (Model.Count == 0)
        {
            <p>Nu exista Angajati!</p>
        }
        else
        {
    <table class="table table-striped table-bordered">
        <tr>
             <th colspan="2" class="fit-content">
                    Nr.
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
            @foreach (var evt in Model)
        {
            <tr>
                <td><input type="checkbox" name="angajatId" value="@evt.CodAngajat" /></td>
                <td>
                    @evt.CodAngajat
                </td>
                <td>
                    @evt.Nume
                </td>
                <td>
                    @evt.Prenume
                </td>
                <td>
                    @evt.Functie
                </td>
                <td>
                    @evt.Telefon
                </td>
                <td>
                    @evt.Email
                </td>
            </tr>
           
        }
    </table>}
  </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


