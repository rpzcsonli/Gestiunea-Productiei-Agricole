@{
    ViewData["Title"] = "Stergere Angajati";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Angajati</h1>
<form method="post">
    <div>
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Angajati") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                    Selectie

            </th>
            <th>
                CodAngajat
            </th>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Functie
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
        </tr>
    @foreach (var evt in ViewBag.stergere)
        {
            <tr>
                <td><input type="checkbox" name="angajatId" value="@evt.CodAngajat" /></td>
                <td>
                    @evt.CodAngajat
                </td>
                <td>
                    @evt.Nume
                </td>
                <td>
                    @evt.Prenume
                </td>
                <td>
                    @evt.Functie
                </td>
                <td>
                    @evt.Telefon
                </td>
                <td>
                    @evt.Email
                </td>
            </tr>
           
        }
    </table>
  </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


