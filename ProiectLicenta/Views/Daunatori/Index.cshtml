@using ProiectLicenta.Models

@model List<Daunatori>

@{
    ViewData["Title"] = "Daunatori";
}

<h1> Daunatori </h1>

<p>
    <a asp-controller="Daunatori" asp-action="Adaugare"> Adauga Daunator</a>
</p>
<p>
    <a asp-controller="Daunatori" asp-action="Stergere"> Sterge Daunator</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista daunatori!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Daunator
            </th>
            <th>
                Denumire
            </th>
            <th>
                Tratament
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodDaunator
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.CodTratament
                </td>
            </tr>
        }

    </table>
}