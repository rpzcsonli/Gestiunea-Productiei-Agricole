@using ProiectLicenta.Models
@model List<Daunatori>
@{
    ViewData["Title"] = "Daunatori";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}

<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-bug-fill"></i> Daunatori </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Daunatori" asp-action="Adaugare"> Adauga Daunator</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Daunatori" asp-action="Stergere"> Sterge Daunator</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista daunatori!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th>
                    Cod Daunator
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodDaunator" ? "CodDaunator_desc" : "CodDaunator" })">
                        @if (currentSort != "CodDaunator_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Denumire
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Denumire" ? "Denumire_desc" : "Denumire" })">
                        @if (currentSort != "Denumire_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Tratament
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Tratament" ? "Tratament_desc" : "Tratament" })">
                        @if (currentSort != "Tratament_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodDaunator
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Tratament.Denumire
                </td>
            </tr>
        }

    </table>
}</div>