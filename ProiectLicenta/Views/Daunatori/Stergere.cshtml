@{
    ViewData["Title"] = "Stergere Daunatori";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Daunator</h1>
<form method="post">
    <div>
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Daunatori") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie

            </th>
            <th>
                Cod Daunator
            </th>
            <th>
                Denumire
            </th>
            <th>
                Tratament
            </th>
        </tr>
    @foreach (var evt in ViewBag.stergere)
    {
            <tr>
                <td><input type="checkbox" name="daunatorId" value="@evt.CodDaunator" /></td>
                <td>
                    @evt.CodDaunator
                </td>
                <td>
                    @evt.Denumire
                </td>
                <td>
                    @evt.CodTratament
                </td>
            </tr>
    }
    </table>
    </div>
        <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" /></
        
</form>


