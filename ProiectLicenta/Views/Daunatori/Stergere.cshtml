@model List<Daunatori>
@{
    ViewData["Title"] = "Stergere Daunatori";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-trash3"></i> Sterge Daunator</h1>
<a class="btn btn-warning me-3" href="@Url.Action("Index", "Daunatori")"><i class="bi bi-arrow-left"></i> Inapoi</a>

<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<form method="post">
    <div class="mt-3"> 
        @if (Model.Count == 0)
        {
            <p>Nu exista Daunatori!</p>
        }
        else
        {
        <table class="table table-striped table-bordered">
        <tr>
                    <th colspan="2" class="fit-content">
                        Nr.
                    </th>
            <th>
                Denumire
            </th>
            <th>
                Tratament
            </th>
        </tr>
            @foreach (var evt in Model)
    {
            <tr>
                <td><input type="checkbox" name="daunatorId" value="@evt.CodDaunator" /></td>
                <td>
                    @evt.CodDaunator
                </td>
                <td>
                    @evt.Denumire
                </td>
                <td>
                    @evt.Tratament.Denumire
                </td>
            </tr>
    }
    </table>}
    </div>
        <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" /></
        
</form>


