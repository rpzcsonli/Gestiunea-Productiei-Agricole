@using ProiectLicenta.ViewModels;
@model AddDaunatorViewModel;
@{
    ViewData["Title"] = "Editare Daunatori";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-pencil-fill"></i> Editare Daunatori</h1>
<div>
    <a href="@Url.Action("Index", "Daunatori")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div asp-controller="Daunatori" asp-action="Editare" class="bd-example">
    
    <form method="post">

        <div class=" form-floating mt-3 mb-3">
            <input id="floatingInput" class="form-control" placeholder="Denumire" asp-for="Denumire" />
            <label for="floatingInput" asp-for="Denumire">Denumire</label>
            <span asp-validation-for="Denumire"></span>
            </div>
        <div class="">
          
            <select class="form-select form-control-lg" asp-for="CodTratament" asp-items="ViewBag.codTratament">
                <option value="0" hidden>Alege Tratament</option>
            </select>
            <span asp-validation-for="CodTratament"></span>
            </div>
            <div>
                <input type="hidden" asp-for="CodDaunator" />
            </div>
            </br>
            <input class="btn btn-primary" type="submit" value="Editare Daunator" />
        </form>
    </div>
</div>