@using ProiectLicenta.Models

@model List<RegistruTratamente>
@{
    ViewData["Title"] = "Registru Tratamente";
}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center"> Registru Tratamente </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruTratamente" asp-action="Adaugare"> Adauga Tratamente</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruTratamente" asp-action="Stergere"> Sterge Tratamente</a></th>
    </tr>
</table>
@if (Model.Count == 0)
{
    <p> Nu exista tratamente aplicate in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Aplicare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Daunator
            </th>
            <th>
                Tratament Aplicat
            </th>
            <th>
                Suprafata
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Aplicare
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodTratamentAplicat
                </td>
                <td>
                    @var.Parcela.CodParcela | @var.Parcela.Locatie
                </td>
                <td>
                    @var.Daunatori.Denumire
                </td>
                <td>
                    @var.Daunatori.Tratament.Denumire
                    </td>
                <td>
                    @var.Suprafata
                </td>
                <td>
                    @var.Angajat.CodAngajat | @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.DataAplicare
                </td>
            </tr>
        }

    </table>
}