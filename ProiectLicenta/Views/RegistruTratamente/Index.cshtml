@using ProiectLicenta.Models
@model List<RegistruTratamente>
@{
    ViewData["Title"] = "Registru Tratamente";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Tratamente </h1>
<div class="mb-3">
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <a class="btn btn-primary" asp-controller="RegistruTratamente" asp-action="Adaugare"><i class="bi bi-plus-lg"></i> Adaugare</a>
    <a class="btn btn-danger float-end" asp-controller="RegistruTratamente" asp-action="Stergere"><i class="bi bi-trash3"></i> Stergere</a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<div class="mb-3">
    <h4 hidden>Date</h4>
    <button class="btn btn-secondary mb-3" onclick="downloadTableAsHtml()"><i class="bi bi-file-earmark-arrow-down"></i> Descarca Continut</button>
</div>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista tratamente aplicate in registru!</p>
}
else
{
        <table class="table table-striped table-bordered" id="registruTable">
            <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodTratamentAplicat" ? "CodTratamentAplicat_desc" : "CodTratamentAplicat",searchString = filtru  })">
                        @if (currentSort != "CodTratamentAplicat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela",searchString = filtru  })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Daunatori
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Daunator" ? "Daunator_desc" : "Daunator",searchString = filtru  })">
                        @if (currentSort != "Daunator_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Tratament
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Tratament" ? "Tratament_desc" : "Tratament",searchString = filtru  })">
                        @if (currentSort != "Tratament_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Suprafata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Suprafata" ? "Suprafata_desc" : "Suprafata",searchString = filtru  })">
                        @if (currentSort != "Suprafata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat",searchString = filtru  })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Aplicare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataAplicare" ? "DataAplicare_desc" : "DataAplicare",searchString = filtru  })">
                        @if (currentSort != "DataAplicare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>

            </tr>
        @foreach (var var in Model)
        {
            <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "RegistruTratamente", new {id = var.CodTratamentAplicat })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">
                    @var.CodTratamentAplicat
                </td>
                <td>
                    @var.Parcela.CodParcela | @var.Parcela.Locatie
                </td>
                <td>
                    @var.Daunatori.Denumire
                </td>
                <td>
                    @var.Daunatori.Tratament.Denumire
                    </td>
                <td>
                        @var.Suprafata &#x33A1;
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.DataAplicare.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }

    </table>
}</div>