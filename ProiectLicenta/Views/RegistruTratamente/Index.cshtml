@using ProiectLicenta.Models

@model List<RegistruTratamente>
@{
    ViewData["Title"] = "Registru Tratamente";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";

}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Tratamente </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruTratamente" asp-action="Adaugare"> Adauga Tratamente</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruTratamente" asp-action="Stergere"> Sterge Tratamente</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista tratamente aplicate in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Cod Aplicare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodTratamentAplicat" ? "CodTratamentAplicat_desc" : "CodTratamentAplicat" })">
                        @if (currentSort != "CodTratamentAplicat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela" })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Daunatori
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Daunator" ? "Daunator_desc" : "Daunator" })">
                        @if (currentSort != "Daunator_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Tratament
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Tratament" ? "Tratament_desc" : "Tratament" })">
                        @if (currentSort != "Tratament_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Suprafata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Suprafata" ? "Suprafata_desc" : "Suprafata" })">
                        @if (currentSort != "Suprafata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat" })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Aplicare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataAplicare" ? "DataAplicare_desc" : "DataAplicare" })">
                        @if (currentSort != "DataAplicare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodTratamentAplicat
                </td>
                <td>
                    @var.Parcela.CodParcela | @var.Parcela.Locatie
                </td>
                <td>
                    @var.Daunatori.Denumire
                </td>
                <td>
                    @var.Daunatori.Tratament.Denumire
                    </td>
                <td>
                        @var.Suprafata &#x33A1;
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.DataAplicare.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }

    </table>
}</div>