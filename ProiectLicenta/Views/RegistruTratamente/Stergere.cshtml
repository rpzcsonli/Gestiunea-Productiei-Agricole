@{
    ViewData["Title"] = "Stergere Tratament";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center">Sterge Tratament Aplicat</h1>
<form method="post">
    <a href="@Url.Action("Index","RegistruTratamente")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div class="mt-3">
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Aplicare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Daunator
            </th>
            <th>
                Suprafata
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Aplicare
            </th>
        </tr> @foreach (var var in ViewBag.stergere)
        {
            <tr>
                <td>
                    <input type="checkbox" name="registruTratamenteId" value="@var.CodTratamentAplicat" />
                </td>
                <td>
                    @var.CodTratamentAplicat
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.CodDaunator
                </td>
                <td>
                    @var.Suprafata
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                        @var.DataAplicare.ToString("dd/MM/yyyy")
                </td>
            </tr>
    }</table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


