@model List<RegistruTratamente>
@{
    ViewData["Title"] = "Stergere Tratament";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-trash3"></i> Sterge Tratament Aplicat</h1>
<a class="btn btn-warning me-3" href="@Url.Action("Index", "RegistruTratamente")"><i class="bi bi-arrow-left"></i> Inapoi</a>
<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<form method="post">
    <div class="mt-3">
        @if (Model.Count == 0)
        {
            <p>Nu exista Tratamente Aplicate!</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th colspan="2" class="fit-content">
                        Nr.
                    </th>
                    <th>
                        Parcela
                    </th>
                    <th>
                        Daunator
                    </th>
                    <th>
                        Suprafata
                    </th>
                    <th>
                        Angajat
                    </th>
                    <th>
                        Data Aplicare
                    </th>
                </tr> @foreach (var var in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="registruTratamenteId" value="@var.CodTratamentAplicat" />
                        </td>
                        <td>
                            @var.CodTratamentAplicat
                        </td>
                        <td>
                            @var.Parcela.Locatie
                        </td>
                        <td>
                            @var.Daunatori.Denumire
                        </td>
                        <td>
                            @var.Suprafata
                        </td>
                        <td>
                            @var.Angajat.Nume @var.Angajat.Prenume
                        </td>
                        <td>
                            @var.DataAplicare.ToString("dd/MM/yyyy")
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


