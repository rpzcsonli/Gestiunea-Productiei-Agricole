@{
    ViewData["Title"] = "Stergere Tratament";
}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center">Sterge Tratament Aplicat</h1>
<form method="post">
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "RegistruTratamente") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Selectie
            </th>
            <th>
                Cod Aplicare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Daunator
            </th>
            <th>
                Suprafata
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Aplicare
            </th>
        </tr> @foreach (var var in ViewBag.stergere)
        {
            <tr>
                <td>
                    <input type="checkbox" name="registruTratamenteId" value="@var.CodTratamentAplicat" />
                </td>
                <td>
                    @var.CodTratamentAplicat
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.CodDaunator
                </td>
                <td>
                    @var.Suprafata
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataAplicare
                </td>
            </tr>
    }</table>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


