                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-2">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="bi bi-moisture"></i> Total Irigari</h5>
                            <p class="card-text display-6">
                                @Model.TotalIrigari
