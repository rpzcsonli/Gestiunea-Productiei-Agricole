                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-2">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="bi bi-arrow-bar-up"></i> Numar Palisari</h5>
                            <p class="card-text display-6">@Model.TotalPalisari</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="bi bi-arrow-bar-up"></i> Total Palisari</h5>
                            <p class="card-text display-6">@Model.PlantePalisari</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="bi bi-arrow-bar-up"></i> Medie Palisare/Angajat</h5>
                            <p class="card-text display-6">@mediePalisareAngajat.ToString("0.00")</p>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    }
}
else
{
