@{
    ViewData["Title"] = "Stergere Palisare";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Palisare</h1>
<form method="post">
    <div>
        <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "RegistruPalisare") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Palisare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Numar Plante
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Palisare
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
        {
            <tr>
                <td>
                    <input type="checkbox" name="registruPalisareId" value="@var.CodPalisare" />
                </td>
                <td>
                    @var.CodPalisare
                </td>
                <td>
                    @var.CodParcela

                </td>
                <td>
                    @var.NumarPlante
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataPalisare
                </td>
            </tr>
    }
    </table></div>
    <input value="Stergere" type="submit" name="Stergere" class="btn btn-danger" />
</form>


