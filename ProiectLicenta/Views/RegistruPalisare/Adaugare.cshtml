@using ProiectLicenta.ViewModels;
@model AddRegistruPalisareViewModel;
@{
    ViewData["Title"] = "Adaugare Palisare";
}
<h1 class ="  fw-bold pb-2 pb-xl-3 text-center">Adaugare Palisare</h1>
<div>
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "RegistruPalisare")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <div asp-controller="RegistruPalisare" asp-action="Adaugare" class="bd-example">
        <form method="post">
            <div class="mb-3 mt-3">
                <select class="form-select form-control-lg" asp-for="CodParcela" asp-items="ViewBag.codParcela">
                    <option value="0" hidden>Alege Parcela</option>
            </select>
                <span class="text-danger" asp-validation-for="CodParcela"></span>
            </div>
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Numar Plante" asp-for="NumarPlante" />
                <label for="floatingInput" asp-for="NumarPlante">Numar Plante</label>
                <span class="text-danger" asp-validation-for="NumarPlante"></span>
            </div>
            <div class="mb-3">
                <select class="form-select form-control-lg" asp-for="CodAngajat" asp-items="ViewBag.codAngajat">
                    <option value="0" hidden>Alege Angajat</option>
            </select>
                <span class="text-danger" asp-validation-for="CodAngajat"></span>
            </div>
            <div class="form-floating date mb-3">
                <input type="date" id="floatingInput" class="form-control" placeholder="Data Palisare" asp-for="DataPalisare" />
                <label for="floatingInput"  asp-for="DataPalisare">Data Palisare</label>
                <span class="text-danger" asp-validation-for="DataPalisare"></span>
            </div>
            <div class="mb-3"> <label><input type="checkbox" asp-for="Stare" value="true" /> Sarcina Indeplinita</label></div>

            <input class="btn btn-primary" type="submit" value="Adaugare Palisare" />
    </form>
</div>
</div>