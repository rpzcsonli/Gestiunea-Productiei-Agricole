@using ProiectLicenta.Models

@model List<RegistruPalisare>
@{
    ViewData["Title"] = "Registru Palisare";
}

<h1> Registru Palisare </h1>

<p>
    <a asp-controller="RegistruPalisare" asp-action="Adaugare"> Adauga Palisare</a>
</p>
<p>
    <a asp-controller="RegistruPalisare" asp-action="Stergere"> Sterge Palisare</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista palisari in registru!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Palisare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Numar Plante
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Palisare
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodPalisare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.NumarPlante
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataPalisare
                </td>
            </tr>
        }

    </table>
}