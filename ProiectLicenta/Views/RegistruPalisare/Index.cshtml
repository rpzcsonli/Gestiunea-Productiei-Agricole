@using ProiectLicenta.Models

@model List<RegistruPalisare>
@{ViewData["Title"] = "Registru Palisare";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Palisare </h1>
<div class="mb-3">
    <a class="me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <a class="" asp-controller="RegistruPalisare" asp-action="Adaugare"><i class="bi bi-plus-square-fill link-primary h1"></i></a>
    <a class="float-end" asp-controller="RegistruPalisare" asp-action="Stergere"><i class="bi bi-trash-fill link-danger h1"></i></a>
</div>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista palisari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
            <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodPalisare" ? "CodPalisare_desc" : "CodPalisare" })">
                        @if (currentSort != "CodPalisare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela" })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Numar Plante
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "NumarPlante" ? "NumarPlante_desc" : "NumarPlante" })">
                        @if (currentSort != "NumarPlante_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat" })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Palisare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataPalisare" ? "DataPalisare_desc" : "DataPalisare" })">
                        @if (currentSort != "DataPalisare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
        @foreach (var var in Model)
        {
            <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "RegistruPalisare", new {id = var.CodPalisare })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">
                    @var.CodPalisare
                </td>
                <td>
                    @var.Parcela.CodParcela - @var.Parcela.Locatie
                    
                </td>
                <td>
                    @var.NumarPlante
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                        @var.DataPalisare.ToString("dd/MM/yyyy")
                    </td>
            </tr>
        }

    </table>
}</div>