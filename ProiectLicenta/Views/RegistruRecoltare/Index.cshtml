@using ProiectLicenta.Models

@model List<RegistruRecoltare>
@{
    ViewData["Title"] = "Registru Recoltare";
}


<h1> Registru Recoltare </h1>

<p>
    <a asp-controller="RegistruRecoltare" asp-action="Adaugare"> Adauga Recoltare</a>
</p>
<p>
    <a asp-controller="RegistruRecoltare" asp-action="Stergere"> Sterge Recoltare</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista recoltari in registru!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Recoltare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Angajat
            </th>
            <th>
                Cantitate
            </th>
            <th>
                Data Recoltare
            </th>
           
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodRecoltare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.CantitateRecoltata
                </td>
                <td>
                    @var.DataRecoltare
                </td>
                
            </tr>
        }

    </table>
}