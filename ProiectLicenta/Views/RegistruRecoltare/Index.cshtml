@using ProiectLicenta.Models

@model List<RegistruRecoltare>
@{
    ViewData["Title"] = "Registru Recoltare";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";

}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Recoltare </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruRecoltare" asp-action="Adaugare"> Adauga Recoltare</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruRecoltare" asp-action="Stergere"> Sterge Recoltare</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista recoltari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Cod Recoltare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodRecoltare" ? "CodRecoltare_desc" : "CodRecoltare" })">
                        @if (currentSort != "CodRecoltare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela" })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat" })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Cantitate Recoltata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CantitateRecoltata" ? "CantitateRecoltata_desc" : "CantitateRecoltata" })">
                        @if (currentSort != "CantitateRecoltata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Recoltare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataRecoltare" ? "DataRecoltare_desc" : "DataRecoltare" })">
                        @if (currentSort != "DataRecoltare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodRecoltare
                </td>
                <td>
                    @var.Parcela.CodParcela - @var.Parcela.Locatie
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.CantitateRecoltata
                </td>
                <td>
                    @var.DataRecoltare.ToString("dd/MM/yyyy")
                </td>
                
            </tr>
        }

    </table>
}</div>