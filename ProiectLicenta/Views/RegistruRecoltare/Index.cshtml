@using ProiectLicenta.Models

@model List<RegistruRecoltare>
@{
    ViewData["Title"] = "Registru Recoltare";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"> Registru Recoltare </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruRecoltare" asp-action="Adaugare"> Adauga Recoltare</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruRecoltare" asp-action="Stergere"> Sterge Recoltare</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista recoltari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Recoltare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Angajat
            </th>
            <th>
                Cantitate
            </th>
            <th>
                Data Recoltare
            </th>
           
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodRecoltare
                </td>
                <td>
                    @var.Parcela.CodParcela - @var.Parcela.Locatie
                </td>
                <td>
                    @var.Angajat.CodAngajat - @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.CantitateRecoltata
                </td>
                <td>
                    @var.DataRecoltare
                </td>
                
            </tr>
        }

    </table>
}</div>