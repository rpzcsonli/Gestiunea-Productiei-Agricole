@model List<RegistruRecoltare>
@{
    ViewData["Title"] = "Stergere Recoltare";
}
<h1 class="fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-trash3"></i> Sterge Recoltare</h1>
<a class="btn btn-warning me-3" href="@Url.Action("Index", "RegistruRecoltare")"><i class="bi bi-arrow-left"></i> Inapoi</a>
<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<form method="post">
    <div class="mt-3">
        @if (Model.Count == 0)
        {
            <p>Nu exista Recoltari!</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th colspan="2" class="fit-content">
                        Nr.
                    </th>
                    <th>
                        Parcela
                    </th>
                    <th>
                        Angajat
                    </th>
                    <th>
                        Cantitate
                    </th>
                    <th>
                        Data Recoltare
                    </th>
                    <th>Sarcina</th>
                </tr>
                @foreach (var var in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="registruRecoltareId" value="@var.CodRecoltare" />
                        </td>
                        <td>
                            @var.CodRecoltare
                        </td>
                        <td>
                            @var.Parcela.Locatie
                        </td>
                        <td>
                            @var.Angajat.Nume @var.Angajat.Prenume
                        </td>
                        <td>
                            @var.CantitateRecoltata
                        </td>
                        <td>
                            @var.DataRecoltare.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @if (var.Stare == false)
                            {
                                <i class="bi bi-three-dots"></i>
                            }
                            else
                            {
                                <i class="bi bi-check-lg"></i>
                            }
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


