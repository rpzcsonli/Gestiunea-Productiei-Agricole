@{
    ViewData["Title"] = "Stergere Irigare";
}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center">Sterge Irigare</h1>
<form method="post">
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "RegistruIrigare") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Selectie
            </th>
            <th>
                Cod Irigare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Durata Irigare
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Irigare
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
        {
            <tr>
                <td>
                    <input type="checkbox" name="registruIrigareId" value="@var.CodIrigare" />
                </td>
                <td>
                    @var.CodIrigare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.DurataIrigare
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataIrigare
                </td>
            </tr>
    }
    </table>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


