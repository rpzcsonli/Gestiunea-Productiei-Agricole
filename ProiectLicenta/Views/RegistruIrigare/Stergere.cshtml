@{
    ViewData["Title"] = "Stergere Irigare";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Irigare</h1>
<form method="post">
    <a href="@Url.Action("Index","RegistruIrigare")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div class="mt-3">
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Irigare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Durata Irigare
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Irigare
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
        {
            <tr>
                <td>
                    <input type="checkbox" name="registruIrigareId" value="@var.CodIrigare" />
                </td>
                <td>
                    @var.CodIrigare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.DurataIrigare
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                        @var.DataIrigare.ToString("dd/MM/yyyy")
                </td>
            </tr>
    }
    </table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


