@using ProiectLicenta.Models

@model List<RegistruIrigare>
@{
    ViewData["Title"] = "Registru Irigare";
}


<h1> Registru Irigare </h1>

<p>
    <a asp-controller="RegistruIrigare" asp-action="Adaugare"> Adauga Irigare</a>
</p>
<p>
    <a asp-controller="RegistruIrigare" asp-action="Stergere"> Sterge Irigare</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista irigari in registru!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Irigare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Durata Irigare
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Irigare
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodIrigare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.DurataIrigare
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataIrigare
                </td>
            </tr>
        }

    </table>
}