@using ProiectLicenta.Models
@model List<RegistruIrigare>
@{ViewData["Title"] = "Registru Irigare";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Irigare </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruIrigare" asp-action="Adaugare"> Adauga Irigare</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruIrigare" asp-action="Stergere"> Sterge Irigare</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista irigari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Cod Irigare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodIrigare" ? "CodIrigare_desc" : "CodIrigare" })">
                        @if (currentSort != "CodIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela" })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Durata Irigare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DurataIrigare" ? "DurataIrigare_desc" : "DurataIrigare" })">
                        @if (currentSort != "DurataIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat" })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Irigare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataIrigare" ? "DataIrigare_desc" : "DataIrigare" })">
                        @if (currentSort != "DataIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodIrigare
                </td>
                <td>
                    @var.Parcela.CodParcela - @var.Parcela.Locatie
                </td>
                <td>
                    @var.DurataIrigare
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                        @var.DataIrigare.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }

    </table>
}</div>