@using ProiectLicenta.Models
@model List<RegistruIrigare>
@{ViewData["Title"] = "Registru Irigare";}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center"> Registru Irigare </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruIrigare" asp-action="Adaugare"> Adauga Irigare</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruIrigare" asp-action="Stergere"> Sterge Irigare</a></th>
    </tr>
</table>
@if (Model.Count == 0)
{
    <p> Nu exista irigari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Irigare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Durata Irigare
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Irigare
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodIrigare
                </td>
                <td>
                    @var.Parcela.CodParcela - @var.Parcela.Locatie
                </td>
                <td>
                    @var.DurataIrigare
                </td>
                <td>
                    @var.Angajat.CodAngajat - @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                    @var.DataIrigare
                </td>
            </tr>
        }

    </table>
}