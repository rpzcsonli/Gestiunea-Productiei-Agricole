@using ProiectLicenta.Models
@model List<RegistruIrigare>
@{
    ViewData["Title"] = "Registru Irigare";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Irigare </h1>
<div class="mb-3">
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <a class="btn btn-primary" asp-controller="RegistruIrigare" asp-action="Adaugare"><i class="bi bi-plus-lg"></i> Adaugare</a>
    <a class="btn btn-danger float-end" asp-controller="RegistruIrigare" asp-action="Stergere"><i class="bi bi-trash3"></i> Stergere</a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<div class="mb-3">
    <h4 hidden>Date</h4>
    <button class="btn btn-secondary mb-3" onclick="downloadTableAsHtml()"><i class="bi bi-file-earmark-arrow-down"></i> Descarca Continut</button>
</div>
<div>
    @if (Model.Count == 0)
    {
        <p> Nu exista irigari in registru!</p>
    }
    else
    {
        <table class="table table-striped table-bordered" id="registruTable">
            <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodIrigare" ? "CodIrigare_desc" : "CodIrigare",searchString = filtru })">
                        @if (currentSort != "CodIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela",searchString = filtru })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Durata Irigare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DurataIrigare" ? "DurataIrigare_desc" : "DurataIrigare",searchString = filtru })">
                        @if (currentSort != "DurataIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat",searchString = filtru })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Irigare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataIrigare" ? "DataIrigare_desc" : "DataIrigare",searchString = filtru })">
                        @if (currentSort != "DataIrigare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
            @foreach (var var in Model)
            {
                <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "RegistruIrigare", new {id = var.CodIrigare })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">
                        @var.CodIrigare
                    </td>
                    <td>
                        @var.Parcela.CodParcela - @var.Parcela.Locatie
                    </td>
                    <td>
                        @var.DurataIrigare '
                    </td>
                    <td>
                        @var.Angajat.Nume @var.Angajat.Prenume
                    </td>
                    <td>
                        @var.DataIrigare.ToString("dd/MM/yyyy")
                    </td>
                  
                </tr>
            }

        </table>
    }
</div>