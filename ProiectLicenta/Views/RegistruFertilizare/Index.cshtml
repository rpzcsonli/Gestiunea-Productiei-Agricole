@using ProiectLicenta.Models
@model List<RegistruFertilizare>
@{
    ViewData["Title"] = "Registru Fertilizare";
     string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-journals"></i> Registru Fertilizare </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruFertilizare" asp-action="Adaugare"> Adauga Fertilizare</a></th>
        <th> <a class="btn btn-primary" asp-controller="RegistruFertilizare" asp-action="Stergere"> Sterge Fertilizare</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista fertilizari in registru!</p>
}
else
{
    <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Cod Fertilizare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodFertilizare" ? "CodFertilizare_desc" : "CodFertilizare" })">
                        @if (currentSort != "CodFertilizare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Parcela" ? "Parcela_desc" : "Parcela" })">
                        @if (currentSort != "Parcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Suprafata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Suprafata" ? "Suprafata_desc" : "Suprafata" })">
                        @if (currentSort != "Suprafata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Angajat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Angajat" ? "Angajat_desc" : "Angajat" })">
                        @if (currentSort != "Angajat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Fertilizare
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataFertilizare" ? "DataFertilizare_desc" : "DataFertilizare" })">
                        @if (currentSort != "DataFertilizare_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
            </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodFertilizare
                </td>
                <td>
                    @var.Parcela.CodParcela | @var.Parcela.Locatie
                </td>
                <td>
                        @var.Suprafata &#x33A1;
                </td>
                <td>
                    @var.Angajat.Nume @var.Angajat.Prenume
                </td>
                <td>
                        @var.DataFertilizare.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }

    </table>
}</div>