@{
    ViewData["Title"] = "Stergere Fertilizare";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Fertilizare</h1>
<form method="post">
    <div>
        <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "RegistruFertilizare") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Fertilizare
            </th>
            <th>
                Parcela
            </th>
            <th>
                Suprafata
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Fertilizare
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
            <tr>
                <td>
                    <input type="checkbox" name="registruFertilizareId" value="@var.CodFertilizare" />
                </td>
                <td>
                    @var.CodFertilizare
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.Suprafata
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                    @var.DataFertilizare
                </td>
            </tr>
    }
    </table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


