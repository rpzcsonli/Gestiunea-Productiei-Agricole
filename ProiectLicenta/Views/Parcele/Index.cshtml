@using ProiectLicenta.Models
@model List<Parcela>
@{
    ViewData["Title"] = "Parcele";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-layout-wtf"></i> Parcele </h1>
<div class="mb-3">
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <a class="btn btn-primary" asp-controller="Parcele" asp-action="Adaugare"><i class="bi bi-plus-lg"></i> Adaugare</a>
    <a class="btn btn-danger float-end" asp-controller="Parcele" asp-action="Stergere"><i class="bi bi-trash3"></i> Stergere</a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista parcele!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodParcela" ? "CodParcela_desc" : "CodParcela",searchString = filtru  })">
                        @if (currentSort != "CodParcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Locatie
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Locatie" ? "Locatie_desc" : "Locatie",searchString = filtru })">
                        @if (currentSort != "Locatie_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Tipul
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Tip" ? "Tip_desc" : "Tip",searchString = filtru })">
                        @if (currentSort != "Tip_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Suprafata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Suprafata" ? "Suprafata_desc" : "Suprafata",searchString = filtru })">
                        @if (currentSort != "Suprafata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Planta
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Rasaduri" ? "Rasaduri_desc" : "Rasaduri",searchString = filtru })">
                        @if (currentSort != "Rasaduri_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Numar Plante
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "NumarPlante" ? "NumarPlante_desc" : "NumarPlante",searchString = filtru })">
                        @if (currentSort != "NumarPlante_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
                <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "Parcele", new {id = var.CodParcela })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class ="fit-content">
                    @var.CodParcela
                </td>
                <td>
                    @var.Locatie
                </td>
                <td>
                    @var.Tip
                </td>
                <td>
                        @var.Suprafata &#x33A1;
                </td>
                <td>
                        @var.Rasaduri.Planta - @var.Rasaduri.Denumire
                </td>
                <td>
                    @var.NumarPlante
                </td>

            </tr>
        }

    </table>
}</div>