@using ProiectLicenta.Models
@model List<Parcela>
@{
    ViewData["Title"] = "Parcele";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}

<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-layout-wtf"></i> Parcele </h1>

<table class="mb-3">
<tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
    <th> <a class="btn btn-primary" asp-controller="Parcele" asp-action="Adaugare"> Adauga Parcela</a></th>
    <th>    <a class="btn btn-primary" asp-controller="Parcele" asp-action="Stergere"> Sterge Parcela</a></th>
</tr>
    </table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista parcele!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th>
                    Cod Parcela
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodParcela" ? "CodParcela_desc" : "CodParcela" })">
                        @if (currentSort != "CodParcela_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Locatie
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Locatie" ? "Locatie_desc" : "Locatie" })">
                        @if (currentSort != "Locatie_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Tipul
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Tip" ? "Tip_desc" : "Tip" })">
                        @if (currentSort != "Tip_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Suprafata
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Suprafata" ? "Suprafata_desc" : "Suprafata" })">
                        @if (currentSort != "Suprafata_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Planta
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Rasaduri" ? "Rasaduri_desc" : "Rasaduri" })">
                        @if (currentSort != "Rasaduri_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Numar Plante
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "NumarPlante" ? "NumarPlante_desc" : "NumarPlante" })">
                        @if (currentSort != "NumarPlante_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.Locatie
                </td>
                <td>
                    @var.Tip
                </td>
                <td>
                        @var.Suprafata &#x33A1;
                </td>
                <td>
                        @var.Rasaduri.Planta - @var.Rasaduri.Denumire
                </td>
                <td>
                    @var.NumarPlante
                </td>
            </tr>
        }

    </table>
}</div>