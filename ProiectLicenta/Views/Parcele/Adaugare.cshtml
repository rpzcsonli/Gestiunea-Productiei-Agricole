@using ProiectLicenta.ViewModels;
@model AddParcelaViewModel;

@{
    ViewData["Title"] = "Adaugare Parcele";
}

<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Adaugare Parcele</h1>
<div>
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Parcele") + "'");" />
    <div asp-controller="Parcele" asp-action="Adaugare" class="bd-example">
    <form method="post">
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Locatie" asp-for="Locatie" />
                <label for="floatingInput" asp-for="Locatie">Locatie</label>
           
            <span asp-validation-for="Locatie"></span>
            </div>
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Tip" asp-for="Tip" />
                <label for="floatingInput" asp-for="Tip">Tip</label>
            
            <span asp-validation-for="Tip"></span>
            </div>
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Suprafata (mp)" asp-for="Suprafata" />
                <label for="floatingInput" asp-for="Suprafata">Suprafata (mp)</label>
           
            <span asp-validation-for="Suprafata"></span>
            </div>
            <div class="form-group">
                
                <select class="form-select form-control-lg" asp-for="CodRasad" asp-items="ViewBag.codRasad">
                    <option value="0" hidden>Alege Rasad</option>
                </select>
            <span asp-validation-for="CodRasad"></span>
            </br>
            </div>
            <div class=" form-floating mb-3">
                <input  id="floatingInput" class="form-control" placeholder="Numar Plante" asp-for="NumarPlante" />
                <label for="floatingInput" asp-for="NumarPlante">Numar Plante</label>
           
            <span asp-validation-for="NumarPlante"></span>
            </div>
           
            <input class="btn btn-primary" type="submit" value="Adaugare Parcela" />
    </form>
    </div>
</div>