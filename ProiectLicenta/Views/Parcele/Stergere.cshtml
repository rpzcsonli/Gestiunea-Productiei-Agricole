@model List<Parcela>
@{
    ViewData["Title"] = "Stergere Parcele";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Parcele</h1>
<a href="@Url.Action("Index", "Parcele")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<form method="post">
    <div class="mt-3">
        @if (Model.Count == 0)
        {
            <p>Nu exista angajati!</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th colspan="2" class="fit-content">
                        Nr.
                    </th>
                    <th>
                        Locatie
                    </th>
                    <th>
                        Tipul
                    </th>
                    <th>
                        Suprafata
                    </th>
                    <th>
                        Planta
                    </th>
                    <th>
                        Numar de Plante
                    </th>
                </tr>
                @foreach (var var in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="parcelaId" value="@var.CodParcela" /></td>
                        <td>
                            @var.CodParcela
                        </td>
                        <td>
                            @var.Locatie
                        </td>
                        <td>
                            @var.Tip
                        </td>
                        <td>
                            @var.Suprafata
                        </td>
                        <td>
                            @var.Rasaduri.Planta - @var.Rasaduri.Denumire
                        </td>
                        <td>
                            @var.NumarPlante
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


