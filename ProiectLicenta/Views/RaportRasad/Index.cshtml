                                            }
                                            else
                                            {
                                                <i class="bi bi-sort-down"></i>
                                            }
                                        </a>
                                    </th>
                                </tr>
                                    </thead>
                                    <tbody>
                                @foreach (var registru in item.RegistruIrigare)
                                        {
                                            <tr>
                                                <td>@registru.CodIrigare</td>
                                                <td>@registru.CodParcela</td>
                                                <td>@registru.DurataIrigare</td>
                                                <td>@registru.DataIrigare.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                    @if (item.RegistruPalisare != null && item.RegistruPalisare.Any())
                            {
                                <h4 class="text-center">Registru Palisare</h4>
                        <table class="table table-striped table-bordered">
                                    <thead>
                                <tr>
                                    <th>
                                        Cod Palisare
                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "CodPalisare" ? "CodPalisare_desc" : "CodPalisare" })">
                                            @if (currentSort != "CodPalisare_desc")
                                            {
                                                <i class="bi bi-sort-up"></i>
                                            }
                                            else
                                            {
