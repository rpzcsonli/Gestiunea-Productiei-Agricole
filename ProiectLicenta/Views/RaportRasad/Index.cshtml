                                            }
                                        </a>
                                    </th>
                                </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var registru in rasad.RegistruRecoltare)
                                        {
                                            <tr>
                                                <td>@registru.CodRecoltare</td>
                                                <td>@registru.CodParcela</td>
                                                <td>@registru.CantitateRecoltata</td>
                                                <td>@registru.DataRecoltare.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                            @if (rasad.RegistruTratamente != null && rasad.RegistruTratamente.Any())
                            {
                                <h4 class="text-center">Registru Tratamente</h4>
                        <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                <tr>
                                    <th>
                                        Cod Tratament Aplicat
                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "CodTratamentAplicat" ? "CodTratamentAplicat_desc" : "CodTratamentAplicat" })">
                                                @if (currentSort != "CodTratamentAplicat_desc")
                                                {
