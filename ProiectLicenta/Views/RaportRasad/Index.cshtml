                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "CantitateRecoltata" ? "CantitateRecoltata_desc" : "CantitateRecoltata" })">
                                            @if (currentSort != "CantitateRecoltata_desc")
                                            {
