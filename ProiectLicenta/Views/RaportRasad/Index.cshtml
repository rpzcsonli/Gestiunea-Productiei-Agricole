                                                    @if (currentSort != "Suprafata_desc")
                                                    {
                                                        <i class="bi bi-sort-up"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-sort-down"></i>
                                                    }
                                                </a>
                                            </th>
                                            <th>
                                                Data Fertilizare
                                                <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "DataFertilizare" ? "DataFertilizare_desc" : "DataFertilizare" })">
                                                    @if (currentSort != "DataFertilizare_desc")
                                                    {
