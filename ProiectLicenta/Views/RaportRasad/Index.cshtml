                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "DataPalisare" ? "DataPalisare_desc" : "DataPalisare" })">
                                            @if (currentSort != "DataPalisare_desc")
                                            {
                                                <i class="bi bi-sort-up"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-sort-down"></i>
                                            }
                                        </a>
                                    </th>
                                </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var registru in rasad.RegistruPalisare)
                                        {
                                            <tr>
                                                <td>@registru.CodPalisare</td>
                                                <td>@registru.CodParcela</td>
                                                <td>@registru.NumarPlante</td>
                                                <td>@registru.DataPalisare.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                            @if (rasad.RegistruRecoltare != null && rasad.RegistruRecoltare.Any())
                            {
                                <h4 class="text-center">Registru Recoltare</h4>
                        <table class="table table-striped table-bordered">
                                    <thead>
                                <tr>
                                    <th>
                                        Cod Recoltare
                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "CodRecoltare" ? "CodRecoltare_desc" : "CodRecoltare" })">
                                            @if (currentSort != "CodRecoltare_desc")
                                            {
                                                <i class="bi bi-sort-up"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-sort-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        Cod Parcela
                                        <a href="@Url.Action("Index", new { rasadSelectat, registruSelectat, sortOrder = currentSort == "CodParcela" ? "CodParcela_desc" : "CodParcela" })">
                                            @if (currentSort != "CodParcela_desc")
                                            {
