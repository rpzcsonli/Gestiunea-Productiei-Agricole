@{
    ViewData["Title"] = "Stergere Copilire";
}
<h1>Sterge Angajati</h1>
<form method="post">
    @foreach (var evt in ViewBag.stergere)
    {
        <div class="form-group">
            <label>
                <span>@evt.CodCopilire  @evt.DataCopilire</span>
                <input type="checkbox" name="registruCopilireId" value="@evt.CodCopilire" />
            </label>
        </div>
    }
    <input type="submit" name="Stergere" class="btn btn-danger" />
</form>


