@{
    ViewData["Title"] = "Stergere Copilire";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center">Sterge Copilire</h1>
<form method="post">
    <a href="@Url.Action("Index","RegistruCopilire")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div class="mt-3">
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Copilire
            </th>
            <th>
                Parcela
            </th>
            <th>
                Numar Plante
            </th>
            <th>
                Angajat
            </th>
            <th>
                Data Copilire
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
            <tr>
                <td>
                    <input type="checkbox" name="registruCopilireId" value="@var.CodCopilire" />
                </td>
                <td>
                    @var.CodCopilire
                </td>
                <td>
                    @var.CodParcela
                </td>
                <td>
                    @var.NumarPlante
                </td>
                <td>
                    @var.CodAngajat
                </td>
                <td>
                        @var.DataCopilire.ToString("dd/MM/yyyy")
                </td>
            </tr>
    }
    </table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


