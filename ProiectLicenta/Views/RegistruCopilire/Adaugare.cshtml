@using ProiectLicenta.ViewModels;
@model AddRegistruCopilireViewModel;
@{
    ViewData["Title"] = "Adaugare Copilire";
}
<h1 class="fw-bold pb-2 pb-xl-3 text-center">Adaugare Copilire</h1>
<div>
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "RegistruCopilire")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <div asp-controller="RegistruCopilire" asp-action="Adaugare" class="bd-example">
   <form method="post">
            <div class="mb-3 mt-3">
                <select class="form-select form-control-lg" asp-for="CodParcela" asp-items="ViewBag.codParcela">
                    <option value="0" hidden>Alege Parcela</option>
            </select>
                <span class="text-danger" asp-validation-for="CodParcela"></span>
        </div>
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Denumire" asp-for="NumarPlante" />
                <label for="floatingInput" asp-for="NumarPlante">Numar Plante</label>
                <span class="text-danger" asp-validation-for="NumarPlante"></span>
        </div>
            <div class="mb-3">
                <select class="form-select form-control-lg" asp-for="CodAngajat" asp-items="ViewBag.codAngajat">
                    <option value="0" hidden>Alege Angajatul</option>
            </select>
                <span class="text-danger" asp-validation-for="CodAngajat"></span>
        </div>
            <div class=" form-floating mb-3">
                <input id="floatingInput" class="form-control" placeholder="Denumire" asp-for="DataCopilire" />
                <label for="floatingInput" asp-for="DataCopilire">Data Copilire</label>
                <span class="text-danger" asp-validation-for="DataCopilire"></span>
        </div>

            <input class="btn btn-primary" type="submit" value="Adaugare Copilire" />
    
    </form>
</div>
</div>