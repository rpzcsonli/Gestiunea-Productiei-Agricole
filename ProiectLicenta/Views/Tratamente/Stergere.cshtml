@{
    ViewData["Title"] = "Stergere Tratamente";
}
<h1>Sterge Tratament</h1>
<form method="post">
    @foreach (var evt in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <span>@evt.Denumire</span>
                <input type="checkbox" name="tratamentId" value="@evt.CodTratament" />
            </label>
        </div>
    }
    <input type="submit" name="Stergere" class="btn btn-danger" />
</form>


