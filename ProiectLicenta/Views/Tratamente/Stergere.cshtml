@{
    ViewData["Title"] = "Stergere Tratamente";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center">Sterge Tratament</h1>

<form method="post">
    <a href="@Url.Action("Index","Tratamente")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div class="mt-3">
    <table class="table table-striped table-bordered">
        <tr>
            <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Tratament
            </th>
            <th>
                Denumire
            </th>
            <th>
                Cantitate
            </th>
            <th>
                Perioada
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
            <tr>
                    <td style="width:auto">
                    <input type="checkbox" name="tratamentId" value="@var.CodTratament" />
                </td>
                <td>
                    @var.CodTratament
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Cantitate
                </td>
                <td>
                    @var.Perioada
                </td>
            </tr>
    }
    </table>
    </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


