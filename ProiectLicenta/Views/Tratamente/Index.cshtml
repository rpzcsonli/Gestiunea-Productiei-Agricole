@using ProiectLicenta.Models

@model List<Tratament>

@{
    ViewData["Title"] = "Tratamente";
}

<h1> Tratamente </h1>

<p>
    <a asp-controller="Tratamente" asp-action="Adaugare"> Adauga Tratament</a>
</p>
<p>
    <a asp-controller="Tratamente" asp-action="Stergere"> Sterge Tratament</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista tratamente!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Tratament
            </th>
            <th>
                Denumire
            </th>
            <th>
                Cantitate
            </th>
            <th>
                Perioada
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodTratament
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Cantitate
                </td>
                <td>
                    @var.Perioada
                </td>
            </tr>
        }

    </table>
}