@using ProiectLicenta.Models
@model List<Tratament>
@{
    ViewData["Title"] = "Tratamente";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-activity"></i> Tratamente </h1>

<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Tratamente" asp-action="Adaugare"> Adauga Tratament</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Tratamente" asp-action="Stergere"> Sterge Tratament</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista tratamente!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th>
                    Cod Tratament
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodTratament" ? "CodTratament_desc" : "CodTratament" })">
                        @if (currentSort != "CodTratament_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Denumire
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Denumire" ? "Denumire_desc" : "Denumire" })">
                        @if (currentSort != "Denumire_desc")
                            {
                            <i class="bi bi-sort-up"></i>
                            }
                            else
                            {
                            <i class="bi bi-sort-down"></i>
                            }
                    </a>
                </th>
                <th>
                    Cantitate (ml/ha)
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Cantitate" ? "Cantitate_desc" : "Cantitate" })">
                        @if (currentSort != "Cantitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Perioada (zile)
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Perioada" ? "Perioada_desc" : "Perioada" })">
                        @if (currentSort != "Perioada_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodTratament
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Cantitate
                </td>
                <td>
                    @var.Perioada
                </td>
            </tr>
        }
    </table>
    }
</div>