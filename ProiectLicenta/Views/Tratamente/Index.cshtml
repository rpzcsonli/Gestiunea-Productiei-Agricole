@using ProiectLicenta.Models
@model List<Tratament>
@{
    ViewData["Title"] = "Tratamente";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class=" fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-activity"></i> Tratamente </h1>
<div class="mb-3">
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <a class="btn btn-primary" asp-controller="Tratamente" asp-action="Adaugare"><i class="bi bi-plus-lg"></i> Adaugare</a>
    <a class="btn btn-danger float-end" asp-controller="Tratamente" asp-action="Stergere"><i class="bi bi-trash3"></i> Stergere</a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista tratamente!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodTratament" ? "CodTratament_desc" : "CodTratament",searchString = filtru })">
                        @if (currentSort != "CodTratament_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Denumire
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Denumire" ? "Denumire_desc" : "Denumire",searchString = filtru })">
                        @if (currentSort != "Denumire_desc")
                            {
                            <i class="bi bi-sort-up"></i>
                            }
                            else
                            {
                            <i class="bi bi-sort-down"></i>
                            }
                    </a>
                </th>
                <th>
                    Cantitate (ml/ha)
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Cantitate" ? "Cantitate_desc" : "Cantitate",searchString = filtru })">
                        @if (currentSort != "Cantitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Perioada (zile)
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Perioada" ? "Perioada_desc" : "Perioada",searchString = filtru })">
                        @if (currentSort != "Perioada_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "Tratamente", new {id = var.CodTratament })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">
                    @var.CodTratament
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Cantitate
                </td>
                <td>
                    @var.Perioada
                </td>
            </tr>
        }
    </table>
    }
</div>