@{ViewData["Title"] = "Stergere Rasaduri";}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Rasaduri</h1>
<form method="post">
    <a href="@Url.Action("Index", "Rasaduri")"><i class="bi bi-arrow-left-square-fill link-warning h1"></i></a>
    <div class="mt-3">
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">
                Selectie
            </th>
            <th>
                Cod Rasad
            </th>
            <th>
                Denumire
            </th>
            <th>
                Planta
            </th>
            <th>
                Data Semanat
            </th>
            <th>
                Data Maturitate
            </th>
            <th>
                Numar de Plante
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
            <tr>
                <td>
                    <input type="checkbox" name="rasadId" value="@var.CodRasad" />
                </td>
                <td>
                    @var.CodRasad
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Planta
                </td>
                <td>
                        @var.DataSemanat.ToString("dd/MM/yyyy")
                </td>
                <td>
                        @var.DataMaturitate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @var.Cantitate
                </td>
            </tr>
    }
    </table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


