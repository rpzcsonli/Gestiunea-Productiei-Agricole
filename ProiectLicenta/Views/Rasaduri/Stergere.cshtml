@{ViewData["Title"] = "Stergere Rasaduri";}
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center">Sterge Rasaduri</h1>
<form method="post">
    <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Rasaduri") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Selectie
            </th>
            <th>
                Cod Rasad
            </th>
            <th>
                Denumire
            </th>
            <th>
                Planta
            </th>
            <th>
                Data Semanat
            </th>
            <th>
                Data Maturitate
            </th>
            <th>
                Numar de Plante
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
            <tr>
                <td>
                    <input type="checkbox" name="rasadId" value="@var.CodRasad" />
                </td>
                <td>
                    @var.CodRasad
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.CodPlanta
                </td>
                <td>
                    @var.DataSemanat
                </td>
                <td>
                    @var.DataMaturitate
                </td>
                <td>
                    @var.Cantitate
                </td>
            </tr>
    }
    </table>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


