@model List<Rasaduri>
@{
    ViewData["Title"] = "Stergere Rasaduri";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-trash3"></i> Sterge Rasaduri</h1>
<a class="btn btn-warning me-3" href="@Url.Action("Index", "Rasaduri")"><i class="bi bi-arrow-left"></i> Inapoi</a>
<div class="mb-3 mt-3">
    <form class="d-flex" asp-action="Stergere" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<form method="post">
    <div class="mt-3">
        @if (Model.Count == 0)
        {
            <p>Nu exista Rasaduri!</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th colspan="2" class="fit-content">
                        Nr.
                    </th>
                    <th>
                        Denumire
                    </th>
                    <th>
                        Planta
                    </th>
                    <th>
                        Data Semanat
                    </th>
                    <th>
                        Data Maturitate
                    </th>
                    <th>
                        Numar de Plante
                    </th>
                </tr>
                @foreach (var var in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="rasadId" value="@var.CodRasad" />
                        </td>
                        <td>
                            @var.CodRasad
                        </td>
                        <td>
                            @var.Denumire
                        </td>
                        <td>
                            @var.Planta
                        </td>
                        <td>
                            @var.DataSemanat.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @var.DataMaturitate.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @var.Cantitate
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


