@using ProiectLicenta.Models
@model List<Rasaduri>
@{
    ViewData["Title"] = "Rasaduri";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
    string filtru = ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-flower2"></i> Rasaduri </h1>
<div class="mb-3">
    <a class="btn btn-warning me-3" href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i> Inapoi</a>
    <a class="btn btn-primary" asp-controller="Rasaduri" asp-action="Adaugare"><i class="bi bi-plus-lg"></i> Adaugare</a>
    <a class="btn btn-danger float-end" asp-controller="Rasaduri" asp-action="Stergere"><i class="bi bi-trash3"></i> Stergere</a>
</div>
<div class="mb-3">
    <form class="d-flex" asp-action="Index" method="get">
        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
        <input class="form-control ms-2" type="search" placeholder="Cautare" aria-label="Cautare" name="searchString" value="@ViewBag.CurrentFilter">
    </form>
</div>
<div class="mb-3">
    <h4 hidden>Date</h4>
    <button class="btn btn-secondary mb-3" onclick="downloadTableAsHtml()"><i class="bi bi-file-earmark-arrow-down"></i> Descarca Continut</button>
</div>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista rasaduri!</p>
}
else
{
        <table class="table table-striped table-bordered" id="registruTable">
        <tr>
                <th colspan="2" class="fit-content">
                    Nr.
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodRasad" ? "CodRasad_desc" : "CodRasad",searchString = filtru })">
                        @if (currentSort != "CodRasad_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Denumire
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Denumire" ? "Denumire_desc" : "Denumire",searchString = filtru })">
                        @if (currentSort != "Denumire_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Planta
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Planta" ? "Planta_desc" : "Planta",searchString = filtru })">
                        @if (currentSort != "Planta_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Semanat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataSemanat" ? "DataSemanat_desc" : "DataSemanat",searchString = filtru })">
                        @if (currentSort != "DataSemanat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Maturitate
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataMaturitate" ? "DataMaturitate_desc" : "DataMaturitate",searchString = filtru })">
                        @if (currentSort != "DataMaturitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Numar de Plante
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Cantitate" ? "Cantitate_desc" : "Cantitate",searchString = filtru })">
                        @if (currentSort != "Cantitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {
                <tr>
                    <td class="fit-content">
                        <a href="@Url.Action("Editare", "Rasaduri", new {id = var.CodRasad })"><i class="bi bi-pencil-fill link-primary"></i></a>
                    </td>
                    <td class="fit-content">
                    @var.CodRasad
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Planta
                </td>
                <td>
                    @var.DataSemanat.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @var.DataMaturitate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @var.Cantitate
                        </td>
                        
                    </tr>
                
        }

    </table>
}</div>