@using ProiectLicenta.Models
@model List<Rasaduri>
@{
    ViewData["Title"] = "Rasaduri";
    string currentSort = ViewBag.SortOrder != null ? ViewBag.SortOrder : "";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"><i class="bi bi-flower2"></i> Rasaduri </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Rasaduri" asp-action="Adaugare"> Adauga Rasaduri</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Rasaduri" asp-action="Stergere"> Sterge Rasaduri</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista rasaduri!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
                <th>
                    Cod Rasad
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "CodRasad" ? "CodRasad_desc" : "CodRasad" })">
                        @if (currentSort != "CodRasad_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Denumire
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Denumire" ? "Denumire_desc" : "Denumire" })">
                        @if (currentSort != "Denumire_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Planta
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Planta" ? "Planta_desc" : "Planta" })">
                        @if (currentSort != "Planta_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Semanat
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataSemanat" ? "DataSemanat_desc" : "DataSemanat" })">
                        @if (currentSort != "DataSemanat_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Data Maturitate
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "DataMaturitate" ? "DataMaturitate_desc" : "DataMaturitate" })">
                        @if (currentSort != "DataMaturitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
                <th>
                    Numar de Plante
                    <a href="@Url.Action("Index", new {sortOrder = currentSort == "Cantitate" ? "Cantitate_desc" : "Cantitate" })">
                        @if (currentSort != "Cantitate_desc")
                        {
                            <i class="bi bi-sort-up"></i>
                        }
                        else
                        {
                            <i class="bi bi-sort-down"></i>
                        }
                    </a>
                </th>
        </tr>
        @foreach (var var in Model)
        {if(var.Cantitate!=0){
            <tr>
                <td>
                    @var.CodRasad
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Planta
                </td>
                <td>
                    @var.DataSemanat.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @var.DataMaturitate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @var.Cantitate
                </td>
                    </tr>
                }
        }

    </table>
}</div>