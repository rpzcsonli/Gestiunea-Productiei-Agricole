@using ProiectLicenta.Models
@model List<Rasaduri>
@{
    ViewData["Title"] = "Rasaduri";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"> Rasaduri </h1>
<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Rasaduri" asp-action="Adaugare"> Adauga Rasaduri</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Rasaduri" asp-action="Stergere"> Sterge Rasaduri</a></th>
    </tr>
</table>
<div>
@if (Model.Count == 0)
{
    <p> Nu exista rasaduri!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Rasad
            </th>
            <th>
                Denumire
            </th>
            <th>
                Planta
            </th>
            <th>
                Data Semanat
            </th>
            <th>
                Data Maturitate
            </th>
            <th>
                Numar de Plante
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodRasad
                </td>
                <td>
                    @var.Denumire
                </td>
                <td>
                    @var.Plante.CodPlanta - @var.Plante.Nume
                </td>
                <td>
                    @var.DataSemanat
                </td>
                <td>
                   @var.DataMaturitate
                </td>
                <td>
                    @var.Cantitate
                </td>
            </tr>
        }

    </table>
}</div>