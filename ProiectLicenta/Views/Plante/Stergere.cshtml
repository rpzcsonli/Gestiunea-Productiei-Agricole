@{
    ViewData["Title"] = "Stergere Plante";
}
<h1 class="  fw-bold pb-2 pb-xl-3 text-center">Sterge Plante</h1>
<form method="post">
    <div>
        <input class="btn btn-warning mb-3" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Plante") + "'");" />
    <table class="table table-striped table-bordered">
        <tr>
                <th class="selectie">Selectie</th>
            <th>
                Cod Planta
            </th>
            <th>
                Nume
            </th>
            <th>
                Descriere
            </th>
        </tr>
    @foreach (var var in ViewBag.stergere)
    {
        
            <tr>
                <td> <input type="checkbox" name="plantaId" value="@var.CodPlanta" /></td>
                <td>
                    @var.CodPlanta
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Descriere
                </td>
            </tr>
    }
    </table></div>
    <input type="submit" value="Stergere" name="Stergere" class="btn btn-danger" />
</form>


