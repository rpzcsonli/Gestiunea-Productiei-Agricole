@using ProiectLicenta.Models
@{
    ViewData["Title"] = "Plante";
}
@model List<Plante>
<h1 class="  fw-bold pb-2 pb-xl-3 text-center"> Plante </h1>

<table class="mb-3">
    <tr>
        <th> <input class="btn btn-warning" type="button" value="Inapoi" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></th>
        <th> <a class="btn btn-primary" asp-controller="Plante" asp-action="Adaugare"> Adauga Plante</a></th>
        <th>    <a class="btn btn-primary" asp-controller="Plante" asp-action="Stergere"> Sterge Plante</a></th>
    </tr>
</table>
<div>

@if (Model.Count == 0)
{
    <p> Nu exista plante!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Planta
            </th>
            <th>
                Nume
            </th>
            <th>
                Descriere
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodPlanta
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Descriere
                </td>
            </tr>
        }

    </table>
}</div>