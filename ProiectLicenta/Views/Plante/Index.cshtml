@using ProiectLicenta.Models
@{
    ViewData["Title"] = "Plante";
}
@model List<Plante>
<h1 class="sticky-xl-top fw-bold pt-3 pt-xl-5 pb-2 pb-xl-3 text-center"> Plante </h1>

<table>
    <tr>
        <th> <a class="btn btn-primary" asp-controller="Plante" asp-action="Adaugare"> Adauga Plante</a></th>


        <th>    <a class="btn btn-primary" asp-controller="Plante" asp-action="Stergere"> Sterge Plante</a></th>
    </tr>
</table>
    </br>

@if (Model.Count == 0)
{
    <p> Nu exista plante!</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Cod Planta
            </th>
            <th>
                Nume
            </th>
            <th>
                Descriere
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodPlanta
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Descriere
                </td>
            </tr>
        }

    </table>
}