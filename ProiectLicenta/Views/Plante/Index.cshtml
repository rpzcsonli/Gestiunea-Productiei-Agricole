@using ProiectLicenta.Models
@{
    ViewData["Title"] = "Plante";
}
@model List<Plante>
<h1> Plante </h1>
<p>
    <a asp-controller="Plante" asp-action="Adaugare"> Adauga Plante</a>
</p>
<p>
    <a asp-controller="Plante" asp-action="Stergere"> Sterge Plante</a>
</p>

@if (Model.Count == 0)
{
    <p> Nu exista plante!</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>
                Cod Planta
            </th>
            <th>
                Nume
            </th>
            <th>
                Descriere
            </th>
        </tr>
        @foreach (var var in Model)
        {
            <tr>
                <td>
                    @var.CodPlanta
                </td>
                <td>
                    @var.Nume
                </td>
                <td>
                    @var.Descriere
                </td>
            </tr>
        }

    </table>
}