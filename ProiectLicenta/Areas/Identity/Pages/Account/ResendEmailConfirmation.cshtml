@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Retrimite confirmarea de Email.";
}


<div class="d-flex align-items-center justify-content-center">
        <form method="post">
            <h1>Confirmare Email</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="nume@exemplu.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Retrimitere</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
